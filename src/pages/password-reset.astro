---
import Layout from "@layout/layout.astro"
---

<Layout title="Reset Password" description="Enter your email address to reset your Password">
	<section class="grid place-content-center h-[32rem]">
		<div class="w-full max-w-md p-8 space-y-3 rounded-xl mt-24 bg-gray-200 shadow-md">
			<h1 class="text-2xl font-bold text-center text-sky-600">
				Password Reset
			</h1>
			<p class="leading-loose text-sm">
				Please enter your email address and if you are registered with us, you will receive a password reset link
			</p>
			<form class="space-y-6">
				<div class="space-y-1 text-sm">
					<label for="email" class="block">
						Email
					</label>
					<input type="email" id="email" placeholder="someone@example.com" class="w-full px-4 py-2 rounded-md">
				</div>
				<button class="bg-sky-600 text-white p-2 w-full">
					Submit
				</button>
			</form>
		</div>
	</section>
</Layout>